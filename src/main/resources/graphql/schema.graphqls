type Query {
    getProductById(id: ID!): Product
    getAllProducts: [Product]
}

type Mutation {
    saveProduct(productInput: ProductInput!): Product!
    updateProduct(id: ID, productInput: ProductInput!): Product!
    deleteProductById(id: ID): Boolean
}

input ProductInput {
    name: String
}

type Product {
    id: ID!
    name: String
}